rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Services collection
    // - Public read access (for customer booking)
    // - Authenticated write access (for admin)
    match /services/{serviceId} {
      allow read: if true; // Anyone can read services
      allow write: if request.auth != null; // Only authenticated users can write
    }
    
    // Bookings collection  
    // - Anyone can create bookings (customers)
    // - Only authenticated users can read/update (admin)
    match /bookings/{bookingId} {
      allow create: if true; // Customers can create bookings
      allow read, update, delete: if request.auth != null; // Admin can manage
    }
    
    // Business settings
    // - Public read for basic info (hours, contact)
    // - Authenticated write (admin only)
    match /settings/{document=**} {
      allow read: if true; // Public can read business hours, etc.
      allow write: if request.auth != null; // Only admin can update
    }
    
    // For development - allow all access
    // Remove this rule in production for better security
    match /{document=**} {
      allow read, write: if true;
    }
  }
}